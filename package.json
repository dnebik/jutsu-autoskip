{
  "scripts": {
    "build": "webpack --config webpack.config.js --mode production",
    "watch": "webpack --config webpack.config.js --mode development --watch",
    "watch:ext": "web-ext run --source-dir ./dist/",
    "build:ext": "npm run build && web-ext build --source-dir ./dist/",
    "dev": "concurrently \"npm run watch\" \"npm run watch:ext\""
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "ajv": "^8.11.0",
    "axios": "^0.27.2",
    "concurrently": "^7.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "file-loader": "^6.2.0",
    "html-loader": "^3.1.2",
    "json-loader": "^0.5.7",
    "sass": "^1.53.0",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "web-ext": "^7.1.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  }
}
